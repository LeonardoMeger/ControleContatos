@model ContatoModel
@{
    ViewData["Title"] = "Confirmaçãpo apagar Contato";
}

<div class="text-center">

    <h3 class="display-4">Realmente deseja apagar o contato (@Model.Nome)?</h3>

</div>

<a class= "btn btn-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar Exclusão</a>
<a class ="btn btn-danger" role="button" asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id">Confirmar Exclusão</a>