@model UsuarioModel
@{
    ViewData["Title"] = "Confirmaçãpo apagar Usuario";
}

<div class="text-center">

    <h3 class="display-4">Realmente deseja apagar o Usuario (@Model.Nome)?</h3>

</div>

<a class= "btn btn-primary" role="button" asp-controller="Usuario" asp-action="Index">Cancelar Exclusão</a>
<a class ="btn btn-danger" role="button" asp-action="Apagar" asp-controller="Usuario" asp-route-id="@Model.Id">Confirmar Exclusão</a>